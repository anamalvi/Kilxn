{
  "manifest_version": 2,

  "name": "Kilxns",
  "description": "Collect image URLS as you browse for later.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "options.html"
  },
  "background": {
    "scripts": ["kilect.js"],
    "matches": ["https://*", "http://*"]
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "activeTab"
  ],
  "icons": {
    "16" : "icon-bitty.png"
  },
  "options_page": "options.html"
}